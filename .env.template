# GA Eats Environment Variables Template
# Copy this file to .env and fill in your actual values

# Prisma Accelerate Connection String
# Get this from: https://console.prisma.io/
# Format: prisma://accelerate.prisma-data.net/?api_key=YOUR_API_KEY
DATABASE_URL="prisma://accelerate.prisma-data.net/?api_key=YOUR_ACCELERATE_API_KEY_HERE"

# Direct Database URL (for migrations only)
# This is the direct PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DIRECT_URL="postgresql://username:password@your-postgres-host:5432/gaeats?sslmode=require"

# Optional: Google Places API Key (for future background sync worker)
# GOOGLE_PLACES_API_KEY="your_google_places_api_key_here"
